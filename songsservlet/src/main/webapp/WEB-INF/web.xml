<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--  DIE URL AN DAS SERVLET, WELCHES IN EINEM TOMCAT_SERVER LAEUFT IST:
       http://localhost:8080/echoServlet/echo
       echoServlet ist die Bezeichnung der App,
       echoServlet/echo -> Pfad welcher auf htwb.ai.teames.EchoServlet abgebildet wird
       echoServlet.war wird von uns gebaut, ins webapp-Verzeichnis von Tomcat kopiert
       von Tomcat depoyed
    -->


    <servlet>
        <servlet-name>SongsServlet</servlet-name>
        <servlet-class>htwb.ai.SongsServlet</servlet-class>
        <init-param>
            <param-name>uriToDB</param-name>
            <param-value>psql.f4.htw-berlin.de:5432/songs_kbe</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>SongsServlet</servlet-name>
        <url-pattern>/songs</url-pattern>
    </servlet-mapping>

</web-app>
